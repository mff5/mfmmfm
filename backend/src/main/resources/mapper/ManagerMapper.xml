<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kh.backend.manager.ManagerMapper">
    <resultMap id="managerResultMap" type="com.kh.backend.manager.Manager">
        <result property="no" column="no"/>
        <result property="id" column="id"/>
        <result property="pw" column="pw"/>
        <result property="name" column="name"/>
        <result property="phone" column="phone"/>
        <result property="email" column="email"/>
        <result property="regDate" column="reg_date"/>
    </resultMap>
    <insert id="insertManager" parameterType="com.kh.backend.manager.Manager"> 
        INSERT INTO manager (id, pw, name, phone, email) VALUES ( #{id}, #{pw}, #{name}, #{phone}, #{email} ) 
    </insert>

    <select id="findById" parameterType="String" resultType="com.kh.backend.manager.Manager"> 
        SELECT * FROM manager WHERE id = #{id}
    </select>
    <select id="findByNo" resultType="com.kh.backend.manager.Manager">
        select * from MANAGER where no = #{no}
    </select>
</mapper>